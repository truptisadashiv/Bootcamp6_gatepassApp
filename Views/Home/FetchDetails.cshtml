    @if ((string)ViewData["Status"] == "loggedout")
        {
            <a href="~/Home/Entry" class="btn btn-primary">In</a>
        }
        else
        {
            <a href="~/Home/Entry" class="btn btn-primary">Out</a>
        }
}
